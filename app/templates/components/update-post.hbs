{{#if updatePostForm}}
<h4>Update {{post.owner}}'s {{post.type}}</h4>
<div>
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title" class="form-control" placeholder=post.title}}
    </div>


    <div class="form-group">
      <label for="body">Comment</label>
      {{input value=body id="body" class="form-control" col="20" placeholder=post.body}}
    </div>

    <div class="form-group">
      <label for="teaser">What can you do you want to say regarding this</label>
      {{input value=teaser id="teaser" class="form-control" placeholder=post.teaser}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image" class="form-control" placeholder=post.image}}
    </div>

    <div class="form-group">
      <label for="owner">Author</label>
      {{input value=owner id="owner" class="form-control" placeholder=post.owner}}
    </div>
    <button class="btn btn-primary"{{action 'update' post}}>Save</button>
  </form>
</div>
{{else}}
  <button class="btn btn-primary"{{action 'updatePostForm'}}>Update</button>
{{/if}}
